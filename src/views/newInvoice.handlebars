<div class="new-invoice">
  <h1>New Invoice</h1>
  <form class="new-invoice-form" id="newInvoiceForm">
    <h3 class="new-invoice-section">Bill From</h3>
    <div class="new-invoice-input">
      <label for="billfromAddress">Street Address</label>
      <input type="text" id="billfromAddress" required />
    </div>
    <div class="new-invoice-local-layout">
      <div class="new-invoice-input">
        <label for="billfromCity">City</label>
        <input type="text" id="billfromCity" required />
      </div>
      <div class="new-invoice-input">
        <label for="billfromPostCode">Post Code</label>
        <input type="text" id="billfromPostCode" required />
      </div>
      <div class="new-invoice-input">
        <label for="billfromCountry">Country</label>
        <input type="text" id="billfromCountry" required />
      </div>
    </div>
    <h3 class="new-invoice-section">Bill To</h3>
    <div class="new-invoice-input">
      <label for="clientsName">Client's Name</label>
      <input type="text" id="clientsName" required />
    </div>
    <div class="new-invoice-input">
      <label for="clientsEmail">Client's Email</label>
      <input type="email" id="clientsEmail" required />
    </div>
    <div class="new-invoice-input">
      <label for="clientAddress">Street Address</label>
      <input type="text" id="clientAddress" required />
    </div>
    <div class="new-invoice-local-layout">
      <div class="new-invoice-input">
        <label for="clientCity">City</label>
        <input type="text" id="clientCity" required />
      </div>
      <div class="new-invoice-input">
        <label for="clientPostCode">Post Code</label>
        <input type="text" id="clientPostCode" required />
      </div>
      <div class="new-invoice-input">
        <label for="clientCountry">Country</label>
        <input type="text" id="clientCountry" required />
      </div>
    </div>
    <div class="new-invoice-dates">
      <div class="new-invoice-input">
        <label for="issueDate">Issue Date</label>
        <input
          type="date"
          id="issueDate"
          value="{{draftInvoice.createdAt}}"
          required
        />
      </div>
      <div class="new-invoice-input">
        <label for="paymentTerms">Payment Terms</label>
        <select id="paymentTerms" required>
          <option value="7">Net 7 Days</option>
          <option value="30">Net 30 Days</option>
          <option value="90">Net 90 Days</option>
        </select>
      </div>
    </div>
    <div class="new-invoice-input">
      <label for="projectDescription">Project Description</label>
      <input type="text" id="projectDescription" required />
    </div>

    <h2>Item List</h2>
    <div class="new-invoice-items">
      <div class="new-invoice-item-row">
        <div>Item Name</div>
        <div>Qty.</div>
        <div>Price</div>
        <div>Total</div>
        <div>&nbsp;</div>
      </div>
    </div>

    <button
      type="button"
      class="button button-color-d"
      onclick="addLineItem('{{draftInvoice.id}}')"
    >+ Add New Item</button>

    <div class="new-invoice-buttons">
      <button
        type="button"
        type="button"
        class="button button-color-m"
        onclick="deleteInvoice('{{draftInvoice.id}}')"
      >Discard</button>
      <div>&nbsp;</div>
      <button
        type="button"
        onclick="createInvoice('{{draftInvoice.id}}', false)"
        class="button button-color-f"
      >Save as Draft</button>
      <button
        type="button"
        onclick="createInvoice('{{draftInvoice.id}}', true)"
        class="button"
      >Save &amp; Send</button>
    </div>
  </form>
</div>